#carouselGalerieModal.modal(tabindex="-1", role="dialog")
	.modal-dialog.modal-dialog-centered(role="document")
		.modal-content
			.modal-body
				#carouselGalerie.carousel.slide.py-5.bg-light(data-ride='carousel_disabled', data-interval='0')
					.wrapper
						.position-relative.d-flex.justify-content-between
							.link-close(data-dismiss="modal") &times;
							a.carousel-control-prev(href='#carouselGalerie', role='button', data-slide='prev')
								span.carousel-control-prev-icon(aria-hidden='true')
								span.sr-only Previous
							.carousel-inner.w-75.mx-auto
								.carousel-item.active
									img.w-100(src='assets/images/catalog/fenster/pvc-fenster/ideal-8000/galerie/01.jpg', alt='01')
								.carousel-item
									img.w-100(src='assets/images/catalog/fenster/pvc-fenster/ideal-8000/galerie/01.jpg', alt='01')
								//-
									ol.carousel-indicators.mt-auto
										each item, i in items
											-
												let attrs = {}
												if ( i === 0 ) attrs['class'] = 'active'
											li(data-target='#carouselGalerie', data-slide-to=`${i}`)&attributes(attrs)
												| #{item}
							a.carousel-control-next(href='#carouselGalerie', role='button', data-slide='next')
								span.carousel-control-next-icon(aria-hidden='true')
								span.sr-only Next

