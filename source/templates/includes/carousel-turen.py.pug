							img(src='assets/images/catalog/turen/pvc-tur/pvc-eingangsturen/model/01.png', alt='cover1')
						.viewport-placeholder
							.layers
								img(src='assets/images/catalog/turen/pvc-tur/pvc-eingangsturen/model/01.png', alt='viewport-placeholder')
			ol.product-tab-switcher.justify-content-center.justify-content-md-start
				each item, i in items
					-
						let attrs = {}
						if ( i === 0 ) attrs['class'] = 'active'
					li&attributes(attrs)
						| #{item}
		
		a.carousel-control-next(href='#carouselTuren', role='button', data-slide='next')
			span.carousel-control-next-icon(aria-hidden='true')
			span.sr-only Next

