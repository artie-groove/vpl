.navbar
	& > .navbar-brand
		margin-right 0

.navbar-nav
	line-height 1.95rem
	.navbar-item.nav-link
		&:first-child
			padding-left 0		
		&:last-child
			padding-right 0

.nav-link
	color #000 !important

.navbar-collapse
	& > *
		flex-basis 0
		flex-grow 1
		flex-shrink 1
	.navbar-brand
		margin-right 0
		min-width 200px

.dropdown-toggle::after
	display none

.dropdown.show
	a.nav-link
		color #fff !important
		position relative
		z-index 1005
		font-weight 600

.dropdown-menu
	background-color #000
	padding-bottom 3rem
	.dropdown-item
		color #fff
		&:hover
			background-color #000
			text-decoration underline


.carousel
	max-width 1536px

#carouselMain
	.carousel-caption
		top 0
		bottom 0
		color #000
		font-size 1.2rem
		.lead
			font-weight 400
		button
			font-size 1.9rem
			color @color
			&:hover
				color #fff
		.phone
			font-size 2.25rem
	.carousel-control
		$margin = calc(2.5% + 12px)
		&-prev
			margin-left $margin
		&-next
			margin-right $margin

#carouselDesign
	.carousel-indicators
		position static
		flex-wrap wrap
		margin-bottom 2.5rem
		li
			height unset
			width unset
			text-indent unset
			font-size 1.25rem
			padding .75rem 1.5rem
			margin 0 .5rem
			font-weight bold
			&.active
				border 1px solid #000
	.carousel-inner
		width 75%
		margin 0 auto
	.palette-buttons
		list-style none
		padding 0
		margin-top 2%
		display flex
		justify-content center
		align-items center
		li
			padding .9%
			border .09vw solid transparent
			&.active
				border-color #000
			img
				width 3.5vw
				max-width 54px
				min-width 22px
				height auto
				&:hover
					cursor pointer
	.carousel-control-prev,
	.carousel-control-next
		margin-top 5%
		align-items flex-start
		&-icon
			height 45%
			


.carousel-control-prev,
.carousel-control-next
	&-icon
		background-size contain
		width 43%
		height 32%

.carousel-control-prev
	justify-content flex-start
	&-icon
		background-image: url('../images/carousel-arrow-prev.svg')
		background-position-x left

.carousel-control-next
	justify-content flex-end
	&-icon
		background-image: url('../images/carousel-arrow-next.svg')
		background-position-x right


#carouselTuren
	.thumbs
		li
			width 20%
			margin-right 3%
			&:not(:nth-last-of-type(-n+5))
				margin-bottom 3%

#carouselFenster
	.thumbs
		li
			width 25%
			margin 0 3% 3% 0
			&:nth-of-type(3n+3)
				margin-right 0
			&:nth-last-of-type(-n+3)
				margin-bottom 0


.carousel-product
	.wrapper
		height 75vw
		max-height 600px
	.carousel-inner
		width 85%
		margin 0 1% 0 4%
	.carousel-item
		height 100%
		overflow hidden
		.h1
			position absolute
			width 100%
			top -25%
			right 0
			font-size 3rem
			padding-right 3%
	.thumbs	
		list-style none
		padding-left 0
		margin-bottom 0
		padding-right 2%
		li
			img
				width 100%
				height auto
				&:hover
					cursor pointer
	.viewport
		padding-left 4%
		img
			width auto
			max-height 100%
		
		.img-placeholder
			height 0
			padding-bottom 100%
			position relative
			overflow hidden
			img
				display: inline-block;
				max-width: 100%; 
				max-height: 100%;
				width: auto;
				height: auto;
				position: absolute;
				left: 50%; 
				top: 50%; 
				-webkit-transform: translate(-50%,-50%);
				-ms-transform: translate(-50%,-50%);
				-o-transform: translate(-50%,-50%);
				transform: translate(-50%,-50%);
		
	.product-tabs
		height 100%
		.product-tab
			height inherit
			&:not(.active)
				display none
	
	.description
		text-align right
		p:not(:last-of-type)
			margin-bottom 2rem
	.product-tab-switcher
		position absolute
		z-index: 15
		flex-wrap wrap
		list-style: none
		right 0
		left 0
		bottom 2rem
		margin 0
		width 50%
		padding-left 0
		display flex
		li
			position: relative
			flex: 0 1 auto
			font-size 1.1rem
			padding .75rem 1.5rem
			margin 0
			font-weight bold
			&.active
				border 1px solid #000
			&:hover
				cursor pointer
	.carousel-control-prev,
	.carousel-control-next
		position static
		width 5%
		&-icon
			width 100%

.scrollable
	overflow-y auto
	padding-right 3%
	&::-webkit-scrollbar
		width .5rem
	&::-webkit-scrollbar-thumb
		background-color rgba(0, 0, 0, .25)

a
	&[href^="mailto:"],
	&.link-callback
		text-decoration underline

footer
	margin 10rem 0 5rem
	hr
		height 1.35rem
		margin-top .6rem
nav
	a,
	.btn-link
		color #000
		&:hover
			color @color
	.nav
		.nav-link
			padding-left 0
			font-weight bold
			&:hover
				text-decoration underline
	.h5
		span
			margin-left 2rem

	.nav-submenu
		padding-left 1.5rem
		//padding-right 5rem
		.nav-item:not(:last-child)
			position relative
			&:after
				content '|'
				display block
				position absolute
				top 0
				right -1px
				color #555
		.nav-link
			font-weight initial
			padding-top 0
			padding-left 1rem
	.vendor-filter
		font-size 1.1rem
		a
			margin 0 1.5rem
			text-decoration underline
			&.active
				img
					filter grayscale(0%)
		img
			max-height 30px
			filter grayscale(100%)
			&:hover
				filter grayscale(0%)

				

// Product cards customization

.card-title
	font-size 2rem
	margin-bottom 1.5rem

.card-text
	line-height 2rem

.showcase-item
	text-align center
	height 100%
	border 0
	justify-content center
	align-items center
	& > a
		display block
		max-height 35%
		max-width 75%
		width 100%
		height 100%
		img
			display block
			max-width 100%
			max-height 100%
			margin 0 auto

	.card-title
		margin-top .8rem
	.card-body
		flex-grow 0
		padding-left 2rem
		padding-right 2rem
	img
		flex-grow 0
		max-width 75%
		max-height 50%
		width auto
		height auto
		margin-top 5%
	ul
		text-align left

.showcase-description
	border 0
	height 100%
	.card-img-top
		margin-bottom 2rem
	.card-text
		padding-left 1.5rem
	.card-body
		flex-grow 0


#callbackForm
	font-size 1.5rem
	.form-control
		font-size 1.5rem
		padding-top 2rem
	.btn
		padding-top 2rem
		font-size inherit
		background none
		border 2px solid #9a9a9a
		color #9a9a9a
	.custom-control-label
		$top = .45rem	
		&::before
			border 1px solid #000
			top $top
		&::after
			top $top

.link-close
	cursor pointer
	font-size 5rem
	line-height 1rem
	font-weight 300

#callbackFront
	#callbackForm
		display none
#callbackContacts
	#callbackForm
		.link-close
			display none


.showcase-categories
	$colors = #d3d3d3 #c9eeff '' #e4d4ff #f4f6b5 #ffd7b0
	for $color, $i in $colors
		if $i != 2
			.col-md-6:nth-of-type({$i+1})
				.card
					background-color $color

#contacts
	p
		line-height 2em
		margin-bottom 2em

#navbarProduct
	.navbar-brand
		min-width unset

ul.catalog-breadcrumbs
	list-style none
	padding 0
	margin 0
	li
		display inline-block
		white-space nowrap
		font-size 1.25rem
		&:not(:last-child)
			margin-right 2rem
		&:last-of-type
			font-weight bold

$light-grey = #efefef
.nav-tabs
	border-bottom 0
	.nav-link
		padding 2rem 4rem 1rem 2.5rem
		font-size 1.6rem
		border 0
		&.active
			background-color $light-grey
	li
		&:not(:first-child)
			border-left 2px solid $light-grey
.tab-content
	background-color $light-grey
	padding 4rem 4rem 6rem
	.col-12:not(:first-of-type)
		padding 0 4rem

.overview
	.h2
		margin-top 5rem
		margin-left 2rem
		margin-bottom 2rem
	p
		margin-left 4rem
		margin-bottom 2rem
	ul
		margin-left 2rem

.img-limited
	max-height 450px

ul.checklist
	list-style none
	padding-left 3rem
	li
		position relative
		margin 1rem 0
		b
			font-size 1.5rem
		&::before
			content ' '
			display block
			position absolute
			top .2rem
			left -@padding-left
			width 2rem
			height @width
			background url('../images/checkbox.svg') 0 0 / contain no-repeat
		&.checked::after
			content ' '
			display block
			position absolute
			top -.3rem
			left -@padding-left + .3rem
			width 2.8rem
			height @width
			background url('../images/checkmark.svg') 0 0 / contain no-repeat

.checklist-summary
	padding-left 3rem
	span:not(:first-of-type)
		padding-left: @padding-left
	b
		font-size 1.5rem

#carouselGalerieModal
	padding-right 0 !important
	.modal-dialog
		max-width unset
	.modal-content
		border none
	.modal-body
		padding 0
	.carousel-control-prev,
	.carousel-control-next
		height 80%
		margin auto
	.link-close
		margin -1rem
		padding 1rem
		line-height 0
		position absolute
		top 0
		right 0

.link-galerie
	&:hover
		cursor pointer
