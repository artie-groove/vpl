.navbar
	& > .navbar-brand
		margin-right 0

.navbar-nav
	line-height 1.95rem
	.navbar-item.nav-link
		&:first-child
			padding-left 0		
		&:last-child
			padding-right 0

.nav-link
	color #000 !important

.navbar-collapse
	& > *
		flex-basis 0
		flex-grow 1
		flex-shrink 1
	.navbar-brand
		margin-right 0
		min-width 200px

.dropdown-toggle::after
	display none

.dropdown.show
	a.nav-link
		color #fff !important
		position relative
		z-index 1005
		font-weight 600

.dropdown-menu
	background-color #000
	padding-bottom 3rem
	.dropdown-item
		color #fff
		&:hover
			background-color #000
			text-decoration underline



#carouselMain
	max-width 1536px
	.carousel-caption
		top 0
		bottom 0
		color #000
		font-size 1.2rem
		.lead
			font-weight 400
		button
			font-size 1.9rem
			color @color
			&:hover
				color #fff
		.phone
			font-size 2.25rem

.carousel-control-prev-icon,
.carousel-control-next-icon
	//width: 97px
	//height: 192px
	width 43%
	height 32%

.carousel-control-prev-icon
	background-image: url('../images/carousel-arrow-prev.svg')

.carousel-control-next-icon 
	background-image: url('../images/carousel-arrow-next.svg')


a
	&[href^="mailto:"],
	&.link-callback
		text-decoration underline

footer
	margin 10rem 0 5rem
	hr
		height 1.35rem
		margin-top .6rem
nav
	a,
	.btn-link
		color #000
		&:hover
			color @color
	.nav
		.nav-link
			padding-left 0
			font-weight bold
			&:hover
				text-decoration underline
	.h5
		span
			margin-left 2rem

	.nav-submenu
		padding-left 1.5rem
		padding-right 5rem
		.nav-item:not(:last-child)
			position relative
			&:after
				content '|'
				display block
				position absolute
				top 0
				right -1px
				color #555
		.nav-link
			font-weight initial
			padding-top 0
			padding-left 1rem
	.vendor-filter
		a
			margin 0 1.5em
		img
			max-height 30px
				

// Product cards customization

.card-title
	font-size 2.25rem
	margin-bottom 1.5rem

.card-text
	line-height 2rem

.showcase-item
	text-align center
	height 100%
	border 0
	justify-content center
	align-items center
	padding 10% 1rem
	& > a
		display block
		max-height 35%
		max-width 75%
		width 100%
		height 100%
		img
			display block
			max-width 100%
			max-height 100%
			margin 0 auto

	.card-title
		margin-top 2.5rem
	.card-body
		flex-grow 0
	img
		flex-grow 0
		max-width 75%
		max-height 35%
	ul
		text-align left

.showcase-description
	border 0
	height 100%
	.card-img-top
		margin-bottom 2rem
	.card-text
		padding-left 1.5rem
	.card-body
		flex-grow 0


#callbackForm
	font-size 1.5rem
	.form-control
		font-size 1.5rem
		padding-top 2rem
	.btn
		padding-top 2rem
		font-size inherit
		background none
		border 2px solid #9a9a9a
		color #9a9a9a
	.custom-control-label
		$top = .45rem	
		&::before
			border 1px solid #000
			top $top
		&::after
			top $top
	.link-close
		cursor pointer
		font-size 5rem
		line-height 1rem
		font-weight 300

#callbackFront
	#callbackForm
		display none
#callbackContacts
	#callbackForm
		.link-close
			display none


.showcase-categories
	$colors = #d3d3d3 #c9eeff '' #e4d4ff #f4f6b5 #ffd7b0
	for $color, $i in $colors
		if $i != 2
			.col-md-6:nth-of-type({$i+1})
				.card
					background-color $color

#contacts
	p
		line-height 2em
		margin-bottom 2em